<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <table>
        <tbody>
        <% @order.line_items.each do |li| %>
          <tr>
            <td><%= cl_image_tag li.product.photo.path, width: 200, crop: :fill %></td>
            <td><%= li.product.name %></td>
            <td><%= li.quantity %>&times;</td>
            <td><%= humanized_money_with_symbol(li.price) %></td>
            <td><%= humanized_money_with_symbol(li.total_price) %></td>
          </tr>
        <% end %>
        </tbody>
        <tfoot>
          <tr>
            <td colspan="4">Sous-total</td>
            <td><%= humanized_money_with_symbol(@order.subtotal) %></td>
          </tr>
          <tr>
            <td colspan="4">V.A.T.</td>
            <td><%= humanized_money_with_symbol(@order.vat) %></td>
          </tr>
          <tr>
            <td colspan="4">Total</td>
            <td><%= humanized_money_with_symbol(@order.total_price) %></td>
          </tr>
        </tfoot>
      </table>
      <% if @order.company && @order.user %>
        <div class="col-xs-12 text-center">
          <%= render 'form' %>
        </div>
      <% end %>
    </div>
    <div class="col-xs-12 col-sm-6">
      <h2>Livraison</h2>
      <%= simple_form_for @order do |f| %>
        <%= f.association :company %>
        <%= f.submit 'Valider' %>
      <% end %>
      <h2>Cr√©ation de compte</h2>
      <%= simple_form_for(@user, url: registration_path(@user), remote: true) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email, required: true, autofocus: true %>
          <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
          <%= f.input :password_confirmation, required: true %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Sign up" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
