<div class="container admin-container">
  <%= simple_form_for [:admin, @product] do |f| %>
    <%= f.input :name %>
    <%= f.input :category, collection: Product::CATEGORIES %>
    <%= f.input :date, order: [:day, :month, :year],
                       input_html: {value: @product.date.nil? ? '' : @product.date.strftime('%d/%m/%Y')},
                       as: :string,
                       placeholder: "jj/mm/aaaa",
                       required: true,
                       hint: 'Laisser le champ vide si produit toujours disponible' %>
    <%= f.input :stock %>
    <%= f.input :price %>
    <%= f.input :photo, as: :attachinary %>
    <%= f.input :description %>
    <%= f.submit %>
  <% end %>
</div>
