<div class="container admin-container">
  <h2>Entreprises</h2>
  <%= link_to 'Ajouter une entreprise', new_admin_company_path, class: 'btn btn-primary' %>
  <table class="resource-list">
    <thead>
      <tr>
        <th>Id</th>
        <th>Street</th>
        <th>Post code</th>
        <th>Orders</th>
        <th colspan="3">Created at</th>
      </tr>
    </thead>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.id %></td>
        <td><%= company.street %></td>
        <td><%= company.post_code %></td>
        <td><%= company.orders.count %> orders</td>
        <td><%= company.created_at.strftime('%d/%m/%Y') %></td>
        <td><%= link_to 'modifier', edit_admin_company_path(company) %></td>
        <td><%= link_to 'supprimer', admin_company_path(company), method: :delete %></td>
      </tr>
    <% end %>
  </table>
  <%= will_paginate @orders %>
</div>
