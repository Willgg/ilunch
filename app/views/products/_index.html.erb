<% if products.present? %>
  <div id="products">
    <% products.each do |product| %>
      <div class="col-xs-12 col-sm-4">
        <%= render 'products/show', product: product %>
      </div>
    <% end %>
  </div>
<% else %>
  <div id="products" style="position: relative; height: 411px; width: 100%; background-image: url(<%= image_path('no-product') %>); background-size: cover; display: flex; justify-content: center; align-items: center;">
    <p style="position: relative;font-size: 18px;padding: 20px 60px; background: rgba(255, 255, 255, 0.4);text-align: center">
      Notre chef cuisine et vous prépare de bons petits plats.<br />Revenez demain pour passer commande…
</p>
  </div>
<% end %>
