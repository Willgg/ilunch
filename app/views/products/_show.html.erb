<div class="card" id="product-<%= product.id %>">
  <div class="card-bg" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(' <%= cl_image_path product.photo.path, height: 250, crop: :fill %>');"></div>
  <!-- <div class="card-category"><%= humanized_money_with_symbol(product.price) %></div> -->

    <% if !(params[:controller] == 'menus' && params[:action] == 'index') %>
      <div class="card-details">
        <div class="card-description">
          <h3><%= product.name %></h3>
          <p><%= product.description.truncate(100) %></p>
        </div>

      <% if product.has_stock? && local_assigns[:menu_item] && local_assigns[:line_item] %>

        <% if params[:step] == 'extra' %>
          <%= simple_form_for line_item,
              url: line_items_path(line_item, step: params[:step]) do |f| %>
            <%= f.hidden_field :quantity, value: 1 %>
            <%= f.hidden_field :product_id, value: product.id %>
            <%= f.submit 'Choisir', class: 'btn btn-primary' %>
          <% end %>
        <% else %>
          <%= simple_form_for menu_item,
              url: line_item_menu_items_path(line_item, menu_item, step: params[:step]) do |f| %>
            <%= f.hidden_field :quantity, value: 1 %>
            <%= f.hidden_field :product_id, value: product.id %>
            <%= f.submit 'Choisir', class: 'btn btn-primary' %>
          <% end %>
        <% end %>
      </div>
      <% elsif !product.has_stock? %>
        <p>victime de son succ√®s</p>
      <% end %>

    <% else %>
      <div class="card-details">
        <div class="card-description">
          <h3><%= product.name %></h3>
          <p><%= product.description.truncate(100) %></p>
        </div>
      </div>
      <div class="text-center">
        <%= link_to 'Je commande', new_order_path(step: 'menu'), class: 'btn btn-primary' %>
      </div>
    <% end %>
 <!--  <a class="card-link" href="#" ></a> -->
</div>
