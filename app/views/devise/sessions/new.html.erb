<% title 'Se connecter - ilunch' %>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4  ">

      <h2><%= t(".sign_in") %></h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="form-inputs">
          <div class="row">
            <div class="col-xs-12">
              <%= f.input :email, label: false, required: false, autofocus: true,
                          placeholder: User.human_attribute_name(:email) %>
            </div>
            <div class="col-xs-12">
              <%= f.input :password, label: false, required: false,
                          placeholder: User.human_attribute_name(:password)  %>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-6">
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
              <div class="col-xs-6 text-right">
                <small>
                  <%= link_to t(".forgot_your_password"), new_password_path(resource_name) %><br />
                </small>
              </div>
            <% end -%>
          </div>
        </div>

        <div class="form-actions">
          <div class="row">
            <div class="col-xs-12">
              <div class="form-group">
                <%= f.button :submit, t(".sign_in"), class: 'btn btn-block btn-primary' %>
                <p>
                  Pas encore membre ?
                  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                    <%= link_to t(".sign_up"), new_registration_path(resource_name) %><br />
                  <% end -%>
                </p>
              </div>
            </div>
          </div>
        </div>

      <% end %>

    </div>
  </div>
</div>
